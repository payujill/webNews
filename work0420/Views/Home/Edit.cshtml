@model work0420.Models.newsDB

<form class="form-horizontal" method="post" enctype="multipart/form-data">
    <fieldset>

        <!-- Form Name -->
        <legend>新聞收藏</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">編號</label>
            <div class="col-md-4">
                <input id="no" name="no" type="hidden" 
                       class="form-control input-md" value="@Model.no">
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">日期</label>
            <div class="col-md-4">
                <input id="date" name="date" type="text"
                       class="form-control input-md" value="@Model.date">
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">時間</label>
            <div class="col-md-4">
                <input id="time" name="time" type="text"
                       class="form-control input-md" value="@Model.time">
            </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textarea">新聞標題</label>
            <div class="col-md-4">
                <textarea class="form-control" id="title1" name="title">@Model.title</textarea>
            </div>
        </div>
        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textarea">詳細內容</label>
            <div class="col-md-4">
                <textarea class="form-control" id="urlwith1" name="urlwith">@Model.urlwith</textarea>
            </div>
        </div>
      
        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="selectbasic">狀態</label>
            <div class="col-md-4">
                <select id="state" name="state" class="form-control">
                    <option value="0" @( (Model.state == "0") ? "selected" : "" )>刪除</option>
                    <option value="1" @( (Model.state == "1") ? "selected" : "" )>普通</option>
                    <option value="2" @( (Model.state == "2") ? "selected" : "" )>已收藏</option>
                </select>
            </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="selectbasic">新聞來源</label>
            <div class="col-md-4">
                <select id="wherefrom" name="wherefrom" class="form-control">
                    <option value="u" @( (Model.wherefrom == "u") ? "selected" : "" )>聯合新聞網</option>
                    <option value="c" @( (Model.wherefrom == "c") ? "selected" : "" )>中央社新聞</option>
                </select>
            </div>
        </div>

        <!-- Button (Double) -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="okOrCancel"></label>
            <div class="col-md-8">
                <button id="okOrCancel" name="okOrCancel" class="btn btn-danger" value="Cancel">取消</button>
                <button id="okOrCancel" name="okOrCancel" class="btn btn-success" value="OK">確認收藏</button>
            </div>
        </div>

    </fieldset>
</form>