@model IEnumerable<work0420.Models.newsDB>

@{
    ViewBag.Title = "Index";
}

<!--第一部份:即時新聞:聯合新聞網 & 中央社-->
<div>
<div class="col-sm-6">
    <table class="table table-hover">
        <thead>
            <tr><td colspan="3"><h2>聯合新聞網</h2></td></tr>
            <tr>
                <th>時間</th>
                <th>新聞標題</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!--使用viewbag.c帶入聯合新聞網的即時新聞-->
            @foreach (var data in ViewBag.u)
            {
                <tr>
                    <td>@data.time</td>
                    <td width="=80%">@data.title</td>
                    <td>
                        <a href="/Person/Add">保存</a>
                        <a target="_blank" href="@data.urlwith">內容</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
    <div class="col-sm-6">
        <table class="table table-hover">

            <thead>
                <tr><td colspan="3"><h2>中央社新聞</h2></tr>
                <tr>
                    <th>時間</th>
                    <th>新聞標題</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!--使用viewbag.c帶入中央社的即時新聞-->
                @foreach (var data in ViewBag.c)
            {
                    <tr class="news">
                        <td>@data.time</td>
                        <td width="70%">@data.title</td>
                        <td>
                            <a target="_blank" href="@data.urlwith">內容</a>



                        </td>


                    </tr>
                }

            </tbody>
        </table>
    </div>

    <div class="col-sm-6" id="udn">
        <ul id="latestNews" class="list-group">  
            @foreach (var data in ViewBag.u)
            {
                <li class="list-group-item">
                    @data.time&nbsp;&nbsp;@data.title
                    <span class="pull-right">
                        <a href="/Home/Edit/@data.no" class="btn btn-info btn-xs editItem">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>&nbsp;
                        @*<a href="/Home/Delete/@dataList.NewsId" class="btn btn-danger btn-xs deleteItem">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>*@
                    </span>
                </li>
            }
        </ul>
    </div>
    <div class="col-sm-6" id="cna">

    </div>
</div>


